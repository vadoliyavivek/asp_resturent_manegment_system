                    <tr>
                        <td><h3 class="text-left">pepsi cold</h3></td>
                        <td><h3 class="text-right">₹ 120</h3></td>
                    </tr>
                </table>
                <h4>😜😜😜</h4>
                <div class="gridbtn">
                    <button class="btn1" name="cart" type="submit">
                        <img src="~/images/shopping.png" width="30" height="30" />
                    </button>
                    <a class="btn2" asp-controller="Order" asp-action="Order" type="submit" name="order">ORDER</a>
