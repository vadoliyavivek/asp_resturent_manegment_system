
@{
    ViewData["Title"] = "Drinks";
}
<link href="~/css/header.css" rel="stylesheet" />
<div class="all-page-title page-breadcrumb">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h1>DRINKS</h1>
            </div>
